<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StoreTestActivity" >

    <EditText
        android:id="@+id/alertsOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/linesData"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/alertsInput"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textMultiLine" >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/showData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/alertsOutput"
        android:layout_alignRight="@+id/alertsOutput"
        android:layout_marginBottom="14dp"
        android:onClick="showData"
        android:text="@string/show_data_button" />

    <Button
        android:id="@+id/saveData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showData"
        android:layout_alignBottom="@+id/showData"
        android:layout_alignLeft="@+id/alertsOutput"
        android:onClick="saveData"
        android:text="@string/save_data_button" />

    <EditText
        android:id="@+id/alertsInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/saveData"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/alerts_hint" />

</RelativeLayout>